<?xml version="1.0"?>
<phpunit bootstrap="./bootstrap.php" colors="true">
  <testsuites>
    <testsuite name="PhpTaskDaemon">
      <directory>./</directory>
    </testsuite>
  </testsuites>
  <filter>
    <blacklist>
      <file>./bootstrap.php</file>
      <directory>/usr/share/php/libzend-framework-php/</directory>
    </blacklist>
  </filter>

  <logging>
    <log type="coverage-html" target="./log/coverage" charset="UTF-8" 
      yui="true" highlight="false" lowUpperBound="35" highLowerBound="70" />
  </logging>
</phpunit>
